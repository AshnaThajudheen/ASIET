//FCFS Scheduling

#include<stdio.h>

void main() {

int p[20], wt[20],bt[20],tt[20],n,temp;

float wt_avg=0,tt_avg=0; printf("Enter the number of Processes: "); scanf("%d",&n);

printf("\nEnter the Burst Time of Each

Process :\n");

for(int i = 0 i<n;i++) {

p[i] = i + 1 printf("P%d: ",i+1); scanf("%d",&bt[i]);

}

wt[0] = 0

for(int i = 1 ;i<n;i++) {

wt[i] = bt[i - 1] + wt[i - 1] wt_avg+=wt[i];

}

wt_avg/=n;

for(int i = 0 i<n;i++) {

tt[i]=wt[i]+bt[i];

tt_avg+=tt[i];

}

tt_avg/=n;

printf("\nProcess\t\t Burst Time\t\t Waiting Time\t\t Turnaround Time\n");

for(int i = 0 i<n;i++)

printf("P%d\t\t\t%d\t\t\t%d\t\t\t%d\n",p[i],bt[i],w t[i],tt[i]);

printf("\nAverage Waiting Time:

%.2f", wt_avg);

printf("\nAverage Turnaround Time: %.2f\n",tt_avg);

printf("\nGantt Chart\n\n");

printf("\n----printf("\n----

-\n");

for(int i=0;i<n;i++)

printf("|\tP%d\t|",p[i]);

printf("\n-

--\n");

